    </div>
    <div class="bg-why-us p-5 section-spacing">
        <div class="container text-center">
          <h2 class=" why-us-title mb-5">Why Choose Us?</h2>
          <div class="row">
            <div class="col-md-4">
              <div class="why-us-icon mb-3"><i class="fas fa-cogs"></i></div>
              <h4 class="mb-3 why-us-sub">Expertise</h4>
              <p>Our team consists of highly experienced professionals who have a deep understanding of the industry.</p>
            </div>
            <div class="col-md-4">
              <div class="why-us-icon mb-3"><i class="fas fa-medal"></i></div>
              <h4 class="mb-3  why-us-sub">Quality</h4>
              <p>We strive to provide high-quality services that meet the needs and expectations of our clients.</p>
            </div>
            <div class="col-md-4">
              <div class="why-us-icon mb-3"><i class="fas fa-headset"></i></div>
              <h4 class="mb-3 why-us-sub">Customer Service</h4>
              <p>Our team is dedicated to providing excellent customer service and support to ensure the satisfaction of our clients.</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="container">
        <h2 class="  cta-title text-center mb-5">Top Rated Listings</h2>
        <div class="row">
          <% topListings.forEach(function(listing) { %>
            <div class="col-md-4">
              <div class="card shadow border-0 mb-4">
                <% if(listing.images.length) { %>
                  <a href="/listings/<%= listing._id %>"><img class="card-img-top listing-image" src="<%= listing.images[0].url %>"></a>
                <% } else { %>
                  <img class="img-fluid listing-image" src="https://res.cloudinary.com/dw5kfr7dm/image/upload/v1679078736/BusinessConnect/umsbrcp82kkunskjunvu.jpg" alt="">
                <% } %>
                <div class="card-body p-4">
                  <h5 class="card-title bc-title">
                    <a href="/listings/<%= listing._id %>"><%= listing.title %></a>
                  </h5>
                  <p class="card-text bc-description"><%=listing.description.slice(0, 80)%></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <% if (listing.reviews.length > 0) { %>
                      <% let totalRating = 0 %>
                      <% for(let review of listing.reviews) { %>
                        <% totalRating += review.rating %>
                      <% } %>
                      <% const averageRating = Math.round(totalRating / listing.reviews.length) %>
                      <div class="star-rating">
                        <span class="stars-rating">
                          <% for (let i = 1; i <= 5; i++) { %>
                            <% if (i <= averageRating) { %>
                              <i class="fas fa-star checked"></i>
                            <% } else { %>
                              <i class="far fa-star"></i>
                            <% } %>
                          <% } %>
                        </span>
                        <span class="bc-single-rating text-white"><strong><%= averageRating.toFixed(1) %>/5</strong></span>
                      </div>
                    <% } else { %>
                      <div>
                        <span class="no-reviews">Be the first to review!</span>
                      </div>
                    <% } %>
                    <p class="card-text bc-location">
                      <small><%= listing.location %></small>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <div class="container cta  section-spacing text-center">
            <div class=" p-5 cta-bg rounded">
              <h2 class=" cta-title">Sign up now to create your free listing</h2>
              <button type="button" class="btn cta-btn btn-lg mt-3 text-white" data-bs-toggle="modal" data-bs-target="#register">Sign up</button>
            </div>
      </div>
